<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/base.css' />
    <script type='text/javascript' src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  </head>

  <body>
    <section class="top no-padding">
      <div class="row clear">
        <div class="col col-8">
          <img class="logo" src="{{ logo }}">
          <h1 class="em uppercase font-bold">{{ title }}</h1>
        </div>
        <div class="col col-4">
          <nav class="text-right">
            <ul>
              {{#navList}}
                <li><a href="#">{{ name }}</a></li>
              {{/navList}}
            </ul>
          </nav>
          <div class="input right">
            <form id="uForm" onsubmit="return uploadLink()">
              <input id="uInput" type='url' id="" placeholder="Upload link..."></input>
            </form>
          </div>
        </div>
      </div>
    </section>

    <div class="links-list">
    </div>

    <section class="bot">
      <div class="row clear">
        <div class="col col-12">

        </div>
      </div>
    </section>

    <footer>
    </footer>


    <script type="text/javascript">

      var count = 0;

      function makeLink(msg) {
        if (!msg)
          return;
        count++;

        var tid = new Date().getTime();

        var str = '<section id="' + (msg.id || tid) + '" hidden class="' + ((count % 2 === 0) ? 'lightBlue' : 'light') + '">' +
          '<div class="row clear">' +
            '<div class="col col-4">' +
              '<img class="thumbnail" src="' + msg.imgsrc + '">' +
            '</div>' +
            '<div class="col col-8">' +
              '<h3>' + msg.title + '</h3>' +
              '<p>' + msg.desc + '</p>' +
            '</div>' +
          '</div>' +
        '</section>';

        return {
          data: str,
          id: msg.id || tid
        };
      }

      function uploadLink() {
        console.log("uploadLink called!");
        var url = $('#uInput').val();

        var data = {
          url: url
        }

        var xhr = $.ajax({
          type: "POST",
          url: "/api/upload",
          data: JSON.stringify({url: url}),
          contentType: "application/json",
          dataType: "json"
        });

        xhr.done(function(msg) {
          console.log(msg);

          var l = makeLink(msg);

          $(".links-list").prepend( l.data );
          $('#' + l.id + '').show(600);
        });

        xhr.fail(function(o, status, err) {
          console.log(o);
          console.log(status);
          console.log(err);
        });

        return false;
      }

      console.log("JS Loaded.");

    </script>

  </body>
</html>